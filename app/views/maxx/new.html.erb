<h1>Login</h1>

<%= form_for @webb, url: maxx_path do |f| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_field :message, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, class: 'form-control', required: true %>
  </div>


  <%= f.submit 'mail', class: 'btn btn-primary' %>
  <h1> <%= link_to "create employee", employees_path, class: 'btn btn-primary' %> </h1>
<% end %>